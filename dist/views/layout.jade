doctype
html(prefix="og: http://ogp.me/ns#")
  head
    title #{seo.title} - Sapecat
    link(rel="shortcut icon" href="http://sapecat.com.ve/app/img/icon.jpg")
    meta(property="og:url" content="#{url}")
    meta(property="og:type" content="website")
    meta(property="og:title" content="#{seo.title}")
    meta(property="og:description" content="#{seo.description}")
    meta(property="og:author" content="#{seo.author}")
    meta(property="og:image" content="#{seo.image}")
    meta(name='viewport', content='width=device-width, initial-scale=1')
    if post
      meta(name="twitter:card" content="summary")
      meta(name="twitter:site" content="@sapecatcom")
      if post.author.username_twitter
        meta(name="twitter:creator" content="#{post.author.username_twitter}")
      meta(name="twitter:description" content="#{seo.description}")
      meta(name="twitter:title" content="#{seo.title}")
      meta(name="twitter:image" content="#{seo.image}")
    link(rel='stylesheet', href='/app/ohcopy.min.css')
  body(ng-app="Ohcopy")
    .blank
      .box-center
        i.fa.fa-spinner.fa-spin.fa-5x.m-b
        span.block.h3 Cargando...
    include partials/nav.jade
    include partials/auth.jade
    #page-content
      .container-fluid
        .row
          block content
          include partials/sidebar.jade

    footer
      script(src='/app/ohcopy.min.js')
      script(src='/app/countdown.min.js')
      script.
        $(document).ready(function () {
        setTimeout(function(){
        $(".blank").hide();
        }, 1000);
        });
      .footer-header
        .container-fluid
          .pull-right.text-right
            | Siguenos en:
            a(href='https://www.facebook.com/SapegatoVE')
              i.fa.fa-facebook.fa-fw
            a(href='https://twitter.com/sapecatcom')
              i.fa.fa-twitter.fa-fw
            a(href='https://www.instagram.com/sapeecat')
              i.fa.fa-instagram.fa-fw
          .pull-left
            a.inline(href='http://sapecat.com.ve/info/contact')
              i.fa.fa-envelope.visible-xs
              span Contacto
            a.inline(href='http://sapecat.com.ve/info/conditions')
              i.fa.fa-list.visible-xs
              span Terminos y Condiciones
      .footer-copy
        .container-fluid
